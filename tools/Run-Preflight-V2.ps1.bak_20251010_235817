$RepoRoot = Split-Path -Parent $PSScriptRoot
$PY = & (Join-Path $PSScriptRoot "Set-AlphaCity-Env.ps1") -RepoRoot $RepoRoot
$logDir = Join-Path $RepoRoot "logs"; New-Item -ItemType Directory -Force -Path $logDir | Out-Null
$stamp = Get-Date -Format "yyyyMMdd-HHmmss"
$log = Join-Path $logDir "preflight_v2_$stamp.log"
& $PY (Join-Path $RepoRoot "scripts\preflight_v2_wrapper.py") --root $RepoRoot --export reports *>> $log
Get-Content (Join-Path $RepoRoot "reports\preflight_report.json") -TotalCount 120
Write-Host "`n[Preflight V2 log] $log"
