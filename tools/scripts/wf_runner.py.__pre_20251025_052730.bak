import sys, runpy
from pathlib import Path
CAND = ["scripts/wf_runner.py","tools/scripts/wf_runner.py"]
here = Path(__file__).resolve()
repo = here.parents[2]  # 專案根
target = None
for s in CAND:
    p = (repo / s)
    if p.exists():
        target = p; break
if target is None:
    sys.stderr.write("[Bridge] 找不到 wf_runner.py\n"); sys.exit(2)
sys.argv = [str(target)] + sys.argv[1:]
runpy.run_path(str(target), run_name="__main__")
